<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDR_App.Page1"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             mc:Ignorable="d"
             Title="Page1">

    <VerticalStackLayout>

         <Label Text="Filename:"/>
        <Entry x:Name="filenameEntry" Placeholder="Enter Filename" TextChanged="FilenameEntry_TextChanged"/>
        
        <Label Text="Graph Name:"/>
        <Entry x:Name="graphNameEntry" Placeholder="Enter Graph Name" TextChanged="GraphNameEntry_TextChanged"/>
        
        <Label Text="Max Cycle:"/>
        <Picker x:Name="maxCycleDropdown" SelectedIndexChanged="MaxCycleDropdown_SelectedIndexChanged">
             </Picker>
    </VerticalStackLayout>
</ContentPage>
